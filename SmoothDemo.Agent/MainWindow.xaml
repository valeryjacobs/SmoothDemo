<Window x:Class="SmoothDemo.Agent.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SmoothDemo.Agent"
        mc:Ignorable="d"
        Title="MainWindow" Width="380" Height="180">
    <Grid>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition Height="30"/>
            </Grid.RowDefinitions>
            <TextBlock Background="LightGray" FontSize="33" Text="{Binding ContentToShow}"></TextBlock>
            <TextBlock Height="30" Background="DarkGray" Grid.Row="1" Text="{Binding StatusMessage}" VerticalAlignment="Center"> </TextBlock>
        </Grid>

    </Grid>
</Window>
